{
  "name": "fran-moraton/skeleton",
  "description": "A skeleton for rapid application development using Test-Driven Development (TDD), Domain-Driven Design (DDD), and Event-Driven Architecture (EDA). Provides a clean structure, preconfigured tools, and best practices to kickstart scalable and testable applications",
  "license": "MIT",
  "authors": [
    {
      "name": "Fran Moraton"
    }
  ],
  "require": {
    "php": "^8.5",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-xml": "*",
    "doctrine/orm": "^3.2",
    "nelmio/cors-bundle": "^2.5",
    "symfony/amqp-messenger": "^7.4",
    "symfony/console": "^7.4",
    "symfony/dotenv": "^7.4",
    "symfony/flex": "^2.4",
    "symfony/framework-bundle": "^7.4",
    "symfony/messenger": "^7.4",
    "symfony/monolog-bundle": "^4.0.0",
    "symfony/runtime": "^7.4",
    "symfony/yaml": "^7.4",
    "doctrine/doctrine-bundle": "^3.1.0",
    "doctrine/doctrine-migrations-bundle": "^3.3",
    "ramsey/uuid": "^4.7",
    "lexik/jwt-authentication-bundle": "^3.1",
    "symfony/security-bundle": "7.4.*",
    "beberlei/assert": "^3.3",
    "guzzlehttp/guzzle": "^7.9",
    "symfony/translation": "7.4.*",
    "runtime/frankenphp-symfony": "^1.0"
  },
  "require-dev": {
    "dg/bypass-finals": "^1.9",
    "fakerphp/faker": "^1.24",
    "phpro/grumphp": "^v2.18",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-symfony": "^2.0.9",
    "phpunit/phpunit": "^12.5",
    "squizlabs/php_codesniffer": "^4.0.1",
    "behat/behat": "^3.29",
    "friends-of-behat/symfony-extension": "^2.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts",
      "rm -rf .git/hooks",
      "mkdir -p .git/hooks",
      "cp -r ./config/hooks/* .git/hooks"
    ]
  },
  "config": {
    "allow-plugins": true
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "7.4.*"
    }
  }
}
